<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#FDFDFE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="start"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register!"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fullname_donor_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/customtextfield"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/email_donor_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/customtextfield"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/password_donor_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/customtextfield"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:inputType="textPersonName|textPassword"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"/>



        <EditText
            android:id="@+id/confirm_password_donor_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/customtextfield"
            android:hint="Confirm Password"
            android:inputType="textPersonName|textPassword"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/customtextfield"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Type:"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/rg"
                />
            <RadioButton android:id="@+id/restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:onClick="onRadioButtonClicked"
                android:buttonTint="@color/my_btn_color"
                />
            <RadioButton android:id="@+id/customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/my_btn_color"
                android:text="Customer"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkbox_donor_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/my_btn_color"
            android:text="Agreed to Terms and Condition."
            android:textColor="@color/black"
            android:layout_gravity="start"
            />

        <Button
            android:id="@+id/sign_up_donor_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/custombtn"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp">
            <TextView
                android:id="@+id/alreadymemberregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If Already Have an Account?   "
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/login_text_donor_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>