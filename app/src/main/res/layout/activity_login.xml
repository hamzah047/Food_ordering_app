<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FDFDFE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="40dp"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="121dp"
            android:layout_height="112dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/email_donor_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/customtextfield"
            android:ems="10"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/password_donor_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/customtextfield"
            android:ems="10"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:inputType="textPersonName|textPassword"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/customtextfield"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Type:"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:id="@+id/rg"
                />
            <RadioButton android:id="@+id/restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:onClick="onRadioButtonClicked"
                android:buttonTint="@color/my_btn_color"
                />
            <RadioButton android:id="@+id/customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/my_btn_color"
                android:text="Customer"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/my_btn_color"
                android:text="Driver"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>


        <CheckBox
            android:id="@+id/checkbox_remeber_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/my_btn_color"
            android:text="Remember Me!"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            />

        <Button
            android:id="@+id/sign_in_donor_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/custombtn"
            android:text="Login"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/forgot_password_donor_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/customertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  (Only For Customers)  "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/alreadymemberregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not a Member?   "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/register_text_donor_login"
                android:layout_width="74dp"
                android:layout_height="25dp"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Admin   "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/contat_admin"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="Click Here"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>