<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:text="DASHBOARD"
                android:textColor="@color/my_btn_color"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/toolbar3" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewAddDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/my_btn_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="-4dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_add_24"
                        />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="170dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/imageView5"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:text="Add Dishes"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewAddDetailsDriver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/my_btn_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView66"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="-4dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_add_24"
                        />

                    <TextView
                        android:id="@+id/textView99"
                        android:layout_width="170dp"
                        android:layout_height="65dp"
                        android:layout_below="@+id/imageView66"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-1dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:text="Add Driver"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewdietplan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/my_btn_color"
                app:cardCornerRadius="15dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="-4dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_fastfood_24"
                        />

                    <TextView
                        android:id="@+id/textView9"
                        android:textColor="@color/white"
                        android:layout_width="177dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/imageView6"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="View Dishes"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CVCheckDrivers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/my_btn_color"
                app:cardCornerRadius="15dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="-4dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_directions_bike_24"
                        />

                    <TextView
                        android:id="@+id/textView19"
                        android:textColor="@color/white"
                        android:layout_width="177dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/imageView16"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="View Driver"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/CVCheckOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/my_btn_color"
                app:cardCornerRadius="15dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView166"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginEnd="-4dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_baseline_border_color_24"
                        />

                    <TextView
                        android:id="@+id/textView199"
                        android:textColor="@color/white"
                        android:layout_width="177dp"
                        android:layout_height="67dp"
                        android:layout_below="@+id/imageView166"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-3dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="View Orders"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LogOut"
                android:background="@drawable/custombtn"
                android:id="@+id/logoutbtn"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"
                />

        </LinearLayout>
    </LinearLayout>


</ScrollView>